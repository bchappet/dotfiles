Bootstrap: docker
From: ubuntu:22.04

%arguments
    repo_root="."

%files
    tests/run-install.sh /opt/

%post
    apt-get update && apt-get install -y git curl python3 make automake autoconf pkg-config gcc libevent-dev libncurses5-dev libncursesw5-dev yacc tmux

%labels
    Author benoit
    Version 1.0
    Description Ubuntu 22.04 test environment for dotfiles installation

%help
    This container tests the dotfiles installation on Ubuntu 22.04.
